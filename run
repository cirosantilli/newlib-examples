#!/usr/bin/env bash
. "$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)/common"
debug=false
debug_vm=
gem5_flags=
host=false
trace=
OPTIND=1
while getopts a:Dde:G:ghT:t: OPT; do
  case "$OPT" in
    a)
      common_arch="$OPTARG"
      ;;
    D)
      debug_vm="gdb -q -ex start -args \\
"
      ;;
    d)
      debug=true
      ;;
    e)
      common_gem5_variant="$OPTARG"
      ;;
    G)
      gem5_flags="${OPTARG} \\
"
      ;;
    g)
      common_gem5=true
      ;;
    h)
      host=true
      ;;
    T)
      trace="$OPTARG"
      ;;
    t)
      common_gem5_build_type="$OPTARG"
      ;;
    ?)
      exit 2
      ;;
  esac
done
shift "$(($OPTIND - 1))"
common_setup
if "$common_gem5"; then
  if [ -n "$trace" ]; then
    gem5_flags="${gem5_flags}--debug-flags=${trace} \\
"
  fi
  cmd="\
${debug_vm} \
'${common_gem5_exec}' \\
-d '${common_gem5_m5out_dir}' \\
--debug-file=trace.txt \\
${gem5_flags} \\
'${common_gem5_dir}/configs/example/fs.py' \\
--bare-metal \\
--disk-image='${common_gem5_fake_iso}' \\
--kernel='${common_elf}' \\
--machine-type=VExpress_GEM5_V1 \\
--mem-size=${common_memory}B \\
"
else
  if "$debug"; then
    debug_flags="-S -gdb tcp::${common_gdb_port} \\
"
  else
    debug_flags=
  fi
  if "$host"; then
    qemu_exec="$common_qemu_exec_basename"
  else
    qemu_exec="$common_qemu_exec"
  fi
  if "$trace"; then
    trace_cmd="${gem5_flags}-d in_asm \\
"
  else
    trace_cmd=
  fi
  mkdir -p "${common_qemu_run_dir}"
  cmd="\
${debug_vm}\
'${qemu_exec}' \\
-M '${common_qemu_machine}' \\
-cpu '${common_mcpu}' \\
-D '${common_qemu_run_dir}/trace.txt' \\
-kernel '${common_elf}' \\
-nographic \\
-serial mon:stdio \\
-m ${common_memory} \\
${trace_cmd}\
${debug_flags}\
"
fi
cmd="${cmd} $@"
echo "$cmd"
eval "$cmd"
